<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".U4_A_AlejandroBP">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/general"
        android:orientation="vertical">
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbtn_e"
            android:layout_weight="@dimen/radioButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checked="true"
            android:text="@string/engadir"
            android:buttonTint="@android:color/holo_blue_dark"/>

        <RadioButton
            android:id="@+id/rbtn_s"
            android:layout_weight="@dimen/radioButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/sobrescribir"
            android:buttonTint="@android:color/holo_blue_dark"/>

    </RadioGroup>
    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editText"
        android:inputType="textCapWords" />

        <Button
            android:id="@+id/engadir_sobrescribir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/engadir_sobrescribir"
            android:onClick="onEngadirSobrescribirClick"/>
        <Button
            android:id="@+id/act_secundaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/act_secundaria"
            android:onClick="onEngadirSobrescribirClick"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>